@model CheapDeal.WebApp.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .forgot-wrapper {
        min-height: calc(100vh - 60px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
    }

    .forgot-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        max-width: 450px;
        width: 100%;
        overflow: hidden;
    }

    .forgot-header {
        background: #17a2b8;
        padding: 40px 30px;
        text-align: center;
        color: white;
    }

    .forgot-icon {
        width: 70px;
        height: 70px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 32px;
    }

    .forgot-header h1 {
        font-size: 28px;
        font-weight: 600;
        margin: 0 0 8px 0;
    }

    .forgot-header p {
        font-size: 14px;
        opacity: 0.9;
        margin: 0;
    }

    .forgot-body {
        padding: 35px 30px;
    }

    .info-box {
        background: #e7f7fa;
        border-left: 4px solid #17a2b8;
        padding: 14px;
        border-radius: 8px;
        margin-bottom: 24px;
        display: flex;
        align-items: flex-start;
        gap: 10px;
    }

    .info-box-icon {
        font-size: 18px;
        flex-shrink: 0;
        margin-top: 1px;
    }

    .info-box-text {
        flex: 1;
    }

        .info-box-text strong {
            display: block;
            font-size: 13px;
            color: #0c5460;
            margin-bottom: 3px;
        }

        .info-box-text p {
            font-size: 12px;
            color: #0c5460;
            margin: 0;
            line-height: 1.5;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

            .form-group label .required {
                color: #e74c3c;
            }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #7f8c8d;
        font-size: 16px;
    }

    .form-control {
        width: 100%;
        padding: 12px 14px 12px 40px;
        border: 1px solid #dce4ec;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control:focus {
            outline: none;
            border-color: #17a2b8;
            background: white;
            box-shadow: 0 0 0 3px rgba(23, 162, 184, 0.1);
        }

        .form-control::placeholder {
            color: #95a5a6;
        }

    .text-danger {
        color: #e74c3c;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .btn-submit {
        width: 100%;
        padding: 13px;
        background: #17a2b8;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 8px;
    }

        .btn-submit:hover {
            background: #138496;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

    .divider {
        display: flex;
        align-items: center;
        margin: 24px 0;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e1e8ed;
        }

        .divider span {
            padding: 0 12px;
            color: #95a5a6;
            font-size: 13px;
        }

    .links {
        text-align: center;
    }

        .links a {
            color: #17a2b8;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s ease;
            display: inline-block;
            margin: 5px 0;
        }

            .links a:hover {
                color: #138496;
                text-decoration: underline;
            }

    @@media (max-width: 576px) {
        .forgot-wrapper {
            padding: 0;
        }

        .forgot-container {
            border-radius: 0;
            min-height: calc(100vh - 60px);
        }

        .forgot-body {
            padding: 30px 24px;
        }

        .forgot-header {
            padding: 35px 24px;
        }
    }
</style>

<div class="forgot-wrapper">
    <div class="forgot-container">
        <div class="forgot-header">
            <div class="forgot-icon">🔓</div>
            <h1>Quên mật khẩu?</h1>
            <p>Nhập email để khôi phục tài khoản</p>
        </div>

        <div class="forgot-body">
            <div class="info-box">
                <div class="info-box-icon">📧</div>
                <div class="info-box-text">
                    <strong>Hướng dẫn khôi phục</strong>
                    <p>Chúng tôi sẽ gửi một liên kết đặt lại mật khẩu đến email của bạn.</p>
                </div>
            </div>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="Email">
                        Email <span class="required">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-icon">📧</span>
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập địa chỉ email của bạn",
                            type = "email",
                            required = "required"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn-submit">Gửi liên kết khôi phục</button>
            }

            <div class="divider">
                <span>hoặc</span>
            </div>

            <div class="links">
                @Html.ActionLink("Quay lại đăng nhập", "Login")<br />
                @Html.ActionLink("Tạo tài khoản mới", "Register")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
