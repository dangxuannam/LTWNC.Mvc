@{
    ViewBag.Title = "Xác nhận đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .confirmation-wrapper {
        min-height: calc(100vh - 60px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
    }

    .confirmation-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        max-width: 480px;
        width: 100%;
        text-align: center;
        padding: 50px 40px;
    }

    .success-icon-wrapper {
        width: 100px;
        height: 100px;
        margin: 0 auto 28px;
        position: relative;
    }

    .success-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: #20c997;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: scaleIn 0.5s ease-out;
        box-shadow: 0 8px 24px rgba(32, 201, 151, 0.3);
    }

    @@keyframes scaleIn {
        0% {
            transform: scale(0);
            opacity: 0;
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .checkmark {
        width: 50px;
        height: 50px;
    }

    .checkmark-circle {
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke-width: 2;
        stroke: white;
        fill: none;
        animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }

    .checkmark-check {
        transform-origin: 50% 50%;
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        stroke: white;
        stroke-width: 3;
        fill: none;
        animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.6s forwards;
    }

    @@keyframes stroke {
        100% {
            stroke-dashoffset: 0;
        }
    }

    .confirmation-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0 0 14px 0;
        animation: fadeInUp 0.5s 0.3s both;
    }

    .confirmation-message {
        font-size: 15px;
        color: #5a6c7d;
        line-height: 1.6;
        margin: 0 0 32px 0;
        animation: fadeInUp 0.5s 0.4s both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-login {
        display: inline-block;
        padding: 13px 40px;
        background: #20c997;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(32, 201, 151, 0.3);
        animation: fadeInUp 0.5s 0.5s both;
    }

        .btn-login:hover {
            background: #1ab386;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(32, 201, 151, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-login:active {
            transform: translateY(0);
        }

    .info-section {
        margin-top: 35px;
        padding-top: 28px;
        border-top: 1px solid #e1e8ed;
        animation: fadeInUp 0.5s 0.6s both;
    }

    .info-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 16px;
        display: inline-flex;
        align-items: flex-start;
        gap: 12px;
        text-align: left;
        max-width: 100%;
    }

    .info-icon {
        font-size: 22px;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .info-content {
        flex: 1;
    }

        .info-content strong {
            display: block;
            font-size: 13px;
            color: #2c3e50;
            margin-bottom: 4px;
        }

        .info-content p {
            font-size: 12px;
            color: #5a6c7d;
            margin: 0;
            line-height: 1.5;
        }

    @@media (max-width: 576px) {
        .confirmation-wrapper {
            padding: 0;
        }

        .confirmation-container {
            border-radius: 0;
            min-height: calc(100vh - 60px);
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .confirmation-title {
            font-size: 24px;
        }

        .btn-login {
            padding: 12px 32px;
        }
    }
</style>

<div class="confirmation-wrapper">
    <div class="confirmation-container">
        <div class="success-icon-wrapper">
            <div class="success-circle">
                <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                    <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                    <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                </svg>
            </div>
        </div>

        <h1 class="confirmation-title">Đặt lại mật khẩu thành công!</h1>

        <p class="confirmation-message">
            Mật khẩu của bạn đã được đặt lại thành công. Bây giờ bạn có thể đăng nhập vào hệ thống bằng mật khẩu mới.
        </p>

        @Html.ActionLink("Đăng nhập ngay", "Login", "Account", null, new { @class = "btn-login", id = "loginLink" })

        <div class="info-section">
            <div class="info-card">
                <div class="info-icon">ℹ️</div>
                <div class="info-content">
                    <strong>Lưu ý bảo mật</strong>
                    <p>Nếu bạn không yêu cầu đặt lại mật khẩu, vui lòng liên hệ bộ phận hỗ trợ ngay lập tức.</p>
                </div>
            </div>
        </div>
    </div>
</div>
