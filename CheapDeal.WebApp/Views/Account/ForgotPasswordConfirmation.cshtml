@{
    ViewBag.Title = "Xác nhận quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .confirmation-wrapper {
        min-height: calc(100vh - 60px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
    }

    .confirmation-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        max-width: 500px;
        width: 100%;
        overflow: hidden;
        text-align: center;
    }

    .confirmation-header {
        background: #17a2b8;
        padding: 50px 30px;
        text-align: center;
        color: white;
    }

    .confirmation-icon {
        width: 90px;
        height: 90px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 42px;
    }

    .confirmation-header h1 {
        font-size: 28px;
        font-weight: 600;
        margin: 0 0 8px 0;
    }

    .confirmation-header p {
        font-size: 14px;
        opacity: 0.9;
        margin: 0;
    }

    .confirmation-body {
        padding: 40px 35px;
    }

    .success-box {
        background: #d4edda;
        border-left: 4px solid #28a745;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 28px;
        text-align: left;
    }

        .success-box h3 {
            font-size: 16px;
            color: #155724;
            margin: 0 0 10px 0;
            font-weight: 600;
        }

        .success-box p {
            font-size: 14px;
            color: #155724;
            margin: 0;
            line-height: 1.6;
        }

    .info-steps {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 24px;
        text-align: left;
    }

        .info-steps h4 {
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin: 0 0 12px 0;
        }

        .info-steps ol {
            margin: 0;
            padding-left: 20px;
        }

        .info-steps li {
            font-size: 13px;
            color: #5a6c7d;
            margin-bottom: 8px;
            line-height: 1.5;
        }

    .btn-container {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-primary {
        width: 100%;
        padding: 13px;
        background: #17a2b8;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background: #138496;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.3);
            color: white;
            text-decoration: none;
        }

        .btn-primary:active {
            transform: translateY(0);
        }

    .btn-secondary {
        width: 100%;
        padding: 13px;
        background: white;
        color: #17a2b8;
        border: 2px solid #17a2b8;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-secondary:hover {
            background: #e7f7fa;
            transform: translateY(-1px);
            color: #17a2b8;
            text-decoration: none;
        }

        .btn-secondary:active {
            transform: translateY(0);
        }

    @@media (max-width: 576px) {
        .confirmation-wrapper {
            padding: 0;
        }

        .confirmation-container {
            border-radius: 0;
            min-height: calc(100vh - 60px);
        }

        .confirmation-body {
            padding: 35px 28px;
        }

        .confirmation-header {
            padding: 40px 28px;
        }
    }
</style>

<div class="confirmation-wrapper">
    <div class="confirmation-container">
        <div class="confirmation-header">
            <div class="confirmation-icon">✉️</div>
            <h1>Email đã được gửi!</h1>
            <p>Vui lòng kiểm tra hộp thư của bạn</p>
        </div>

        <div class="confirmation-body">
            <div class="success-box">
                <h3>✓ Yêu cầu đã được xử lý</h3>
                <p>Chúng tôi đã gửi một email chứa liên kết đặt lại mật khẩu đến địa chỉ email của bạn.</p>
            </div>

            <div class="info-steps">
                <h4>Các bước tiếp theo:</h4>
                <ol>
                    <li>Mở email từ hệ thống (kiểm tra cả thư mục spam nếu không thấy)</li>
                    <li>Nhấp vào liên kết đặt lại mật khẩu trong email</li>
                    <li>Tạo mật khẩu mới cho tài khoản của bạn</li>
                    <li>Đăng nhập với mật khẩu mới</li>
                </ol>
            </div>

            <div class="btn-container">
                @Html.ActionLink("Quay lại đăng nhập", "Login", "Account", null, new { @class = "btn-primary" })
                @Html.ActionLink("Về trang chủ", "Index", "Home", null, new { @class = "btn-secondary" })
            </div>
        </div>
    </div>
</div>
