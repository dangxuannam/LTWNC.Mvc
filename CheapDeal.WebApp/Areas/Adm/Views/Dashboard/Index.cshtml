@{
    ViewBag.Title = "Bảng điều khiển quản trị";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="dashboard-header" style="border-bottom: 2px solid #1ab394; margin-bottom: 20px; padding-bottom: 10px;">
                <h3><i class="fa fa-bolt" style="color: #1ab394;"></i> Truy cập nhanh hệ thống</h3>
            </div>
        </div>
    </div>

    <!-- Cards truy cập nhanh -->
    <div class="row">
        <div class="col-lg-3 col-md-6" style="margin-bottom: 20px;">
            <div class="dashboard-card navy-bg" onclick="location.href='@Url.Action("Index", "Product")'">
                <div class="card-content">
                    <div class="card-icon">
                        <i class="fa fa-gift"></i>
                    </div>
                    <div class="card-text">
                        <span>Sản phẩm</span>
                        <h2>Quản lý</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6" style="margin-bottom: 20px;">
            <div class="dashboard-card yellow-bg" onclick="location.href='@Url.Action("Index", "Order")'">
                <div class="card-content">
                    <div class="card-icon">
                        <i class="fa fa-shopping-cart"></i>
                    </div>
                    <div class="card-text">
                        <span>Đơn hàng</span>
                        <h2>Xử lý ngay</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6" style="margin-bottom: 20px;">
            <div class="dashboard-card lazur-bg" onclick="location.href='@Url.Action("Index", "Category")'">
                <div class="card-content">
                    <div class="card-icon">
                        <i class="fa fa-sitemap"></i>
                    </div>
                    <div class="card-text">
                        <span>Sản phẩm</span>
                        <h2>Phân loại</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6" style="margin-bottom: 20px;">
            <div class="dashboard-card red-bg" onclick="location.href='@Url.Action("Library", "Picture")'">
                <div class="card-content">
                    <div class="card-icon">
                        <i class="fa fa-image"></i>
                    </div>
                    <div class="card-text">
                        <span>Thư viện ảnh</span>
                        <h2>Media</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards chức năng phụ -->
    <div class="row" style="margin-top: 20px;">
        <div class="col-lg-6 col-md-6" style="margin-bottom: 20px;">
            <div class="function-box" onclick="location.href='@Url.Action("TrackOrders", "Shipper")'">
                <div class="box-content">
                    <i class="fa fa-truck" style="color: #1ab394; font-size: 48px; margin-bottom: 15px;"></i>
                    <h3 style="margin-bottom: 10px;">Theo dõi vận chuyển</h3>
                    <p style="color: #676a6c; margin: 0;">Kiểm tra trạng thái đơn hàng</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6" style="margin-bottom: 20px;">
            <div class="function-box" onclick="location.href='@Url.Action("Index", "Supplier")'">
                <div class="box-content">
                    <i class="fa fa-university" style="color: #23c6c8; font-size: 48px; margin-bottom: 15px;"></i>
                    <h3 style="margin-bottom: 10px;">Nhà cung cấp</h3>
                    <p style="color: #676a6c; margin: 0;">Quản lý đối tác nhập hàng</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quản lý người dùng -->
    <div class="row" style="margin-top: 20px;">
        <div class="col-lg-12" style="margin-bottom: 20px;">
            <div class="function-box user-management" onclick="location.href='@Url.Action("Index", "User")'">
                <div class="box-content" style="display: flex; align-items: center;">
                    <div style="flex: 0 0 80px; text-align: center;">
                        <i class="fa fa-users" style="color: #1ab394; font-size: 48px;"></i>
                    </div>
                    <div style="flex: 1;">
                        <h3 style="margin-bottom: 5px;">Quản lý Người dùng</h3>
                        <small style="color: #676a6c;">Phân quyền & Nhật ký hoạt động</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Dashboard Cards */
    .dashboard-card {
        padding: 20px;
        border-radius: 8px;
        color: white;
        min-height: 120px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            filter: brightness(1.1);
        }

    .card-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .card-icon {
        flex: 0 0 30%;
        text-align: center;
    }

        .card-icon i {
            font-size: 48px;
            opacity: 0.8;
        }

    .card-text {
        flex: 1;
        text-align: right;
    }

        .card-text span {
            font-size: 14px;
            opacity: 0.9;
            display: block;
        }

        .card-text h2 {
            font-size: 24px;
            font-weight: 700;
            margin: 5px 0 0 0;
        }

    /* Background colors */
    .navy-bg {
        background-color: #1ab394;
    }

    .yellow-bg {
        background-color: #f8ac59;
    }

    .lazur-bg {
        background-color: #23c6c8;
    }

    .red-bg {
        background-color: #ed5565;
    }

    /* Function boxes */
    .function-box {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid #e7eaec;
        border-radius: 8px;
        background: white;
        overflow: hidden;
        padding: 30px;
    }

        .function-box:hover {
            background-color: #f8f9fa;
            border-color: #1ab394;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .function-box i {
            transition: transform 0.3s ease;
        }

        .function-box:hover i {
            transform: scale(1.15);
        }

    .box-content {
        text-align: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .dashboard-card {
            margin-bottom: 15px;
        }

        .card-icon i {
            font-size: 36px;
        }

        .card-text h2 {
            font-size: 18px;
        }

        .function-box {
            padding: 20px;
        }

        .box-content {
            display: block !important;
        }
    }
</style>
