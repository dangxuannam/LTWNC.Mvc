@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var pagedTable = $('#pagedtable').DataTable({
                "responsive": true,
                "order": [[1, 'asc']],
                "pageLength": 10,
                "paging": true,
                "language": {
                    "paginate": { "first": "Đầu", "previous": "Trước", "next": "Tiếp", "last": "Cuối" },
                    "info": "Hiển thị _START_ đến _END_ trong số _TOTAL_ mẫu tin",
                    "search": "Tìm theo từ khóa : ",
                    "lengthMenu": "Hiển thị _MENU_ mẫu tin"
                },
                "dom": '<"row"<"col-sm-6"l><"col-sm-6 text-right"B>>frtip',
                "buttons": [
                    { extend: 'copy', className: 'btn btn-default', text: 'Copy' },
                    { extend: 'csv', className: 'btn btn-default', text: 'CSV' },
                    { extend: 'excel', className: 'btn btn-default', text: 'Excel' },
                    { extend: 'pdf', className: 'btn btn-default', text: 'PDF' },
                    { extend: 'print', className: 'btn btn-default', text: 'Print' }
                ]
            });


            console.log('DataTables info:', pagedTable.page.info()); 

            $('#pagedtable tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });

            $('#delete-selected').on('click', function () {
                var selectedRows = pagedTable.rows('.selected').data();
                if (selectedRows.length === 0) {
                    alert('Vui lòng chọn ít nhất một dòng để xóa.');
                    return;
                }

                if (confirm('Bạn có chắc chắn muốn xóa các công ty đã chọn?')) {
                    var ids = [];
                    selectedRows.each(function () {
                        ids.push(parseInt(this[0])); 
                    });

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteMultiple", "Shipper")',
                        data: { ids: ids },
                        success: function (response) {
                            if (response.success) {
                                pagedTable.rows('.selected').remove().draw();
                            } else if (response.hasOrders) {
                                if (confirm("Một số công ty đang có đơn hàng được giao. Nếu xóa, các đơn hàng sẽ được đặt ShipVia về null. Bạn vẫn muốn xóa?")) {
                                    $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("DeleteMultiple", "Shipper")',
                                        data: { ids: ids, force: true },
                                        success: function (resp) {
                                            if (resp.success) {
                                                pagedTable.rows('.selected').remove().draw();
                                            } else {
                                                alert(resp.message || 'Không thể xóa.');
                                            }
                                        },
                                        error: function (xhr) {
                                            alert('Lỗi: ' + xhr.responseText);
                                        }
                                    });
                                }
                            } else {
                                alert(response.message || 'Không thể xóa.');
                            }
                        },
                        error: function (xhr) {
                            alert('Lỗi: ' + xhr.responseText);
                        }
                    });
                }
            });

            $('#pagedtable tbody').on('click', 'a.dz-remove', function (e) {
                e.preventDefault();
                var btn = $(this);

                if (confirm("Bạn có thực sự muốn xóa công ty này?")) {
                    $.ajax({
                        type: "POST",
                        url: btn.attr('href'),
                        success: function (response) {
                            if (response.success) {
                                var row = btn.closest('tr').get(0);
                                pagedTable.row(row).remove().draw();
                            } else if (response.hasOrders) {
                                if (confirm("Công ty này đang có đơn hàng được giao. Nếu xóa, các đơn hàng sẽ được đặt ShipVia về null. Bạn vẫn muốn xóa?")) {
                                    $.ajax({
                                        type: "POST",
                                        url: btn.attr('href') + "?force=true",
                                        success: function (resp) {
                                            if (resp.success) {
                                                var row = btn.closest('tr').get(0);
                                                pagedTable.row(row).remove().draw();
                                            } else {
                                                alert(resp.message || 'Không thể xóa công ty này.');
                                            }
                                        },
                                        error: function (xhr) {
                                            alert('Lỗi: ' + xhr.responseText);
                                        }
                                    });
                                }
                            } else {
                                alert(response.message || 'Không thể xóa công ty này.');
                            }
                        },
                        error: function (xhr) {
                            alert('Lỗi: ' + xhr.responseText);
                        }
                    });
                }
            });

            $('#pagedtable tbody').on('click', 'a.set-transit', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data('id');
                var url = '@Url.Action("SetInTransit", "Shipper")';

                if (confirm("Bạn có muốn chuyển trạng thái sang đang vận chuyển cho các đơn hàng của công ty này?")) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                alert('Đã chuyển trạng thái thành công.');
                            } else {
                                alert(response.message || 'Không thể chuyển trạng thái.');
                            }
                        },
                        error: function (xhr) {
                            alert('Lỗi: ' + xhr.responseText);
                        }
                    });
                }
            });
        });
    </script>
}
