@model IEnumerable<Shipper>

@{
    ViewBag.Title = "Quản lý các đơn vị giao hàng";
}

<div class="row">
    <div class="col-md-12">

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Danh sách đơn vị vận chuyển hàng</h5>
                <div class="ibox-tools">
                    @(Html.Bootstrap()
                        .ActionLink("Thêm công ty mới","Create")
                        .Class("btn btn-primary btn-sm ")
                        .PrependIcon("fa fa-plus"))
                    <button id="delete-selected" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Xóa selected</button>
                </div>
            </div>

            <div class="ibox-content p-sm">
                <!-- Phần hiển thị danh sách công ty vận chuyển -->
                <table class="table table-striped table-bordered table-hover" id="pagedtable">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên công ty vận chuyển</th>
                            <th>Số điện thoại</th>
                            <th class="hidden-sm hidden-xs">Địa chỉ văn phòng</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipperID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>

                                <td class="hidden-sm hidden-xs">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @(Html.Bootstrap()
                            .ActionLink("", "Edit")
                            .RouteValues(new { id = item.ShipperID })
                            .Title("Cập nhật")
                            .AppendIcon("fa fa-pencil"))
                                    @(Html.Bootstrap()
                            .ActionLink("", "Delete")
                            .Class("dz-remove")
                            .RouteValues(new { id = item.ShipperID })
                            .AppendIcon("fa fa-trash-o")
                             .Title("Xóa"))

                                    <a href="javascript:void(0);" class="set-transit" data-id="@item.ShipperID" title="Chuyển trạng thái đang vận chuyển cho các đơn hàng"><i class="fa fa-truck"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
