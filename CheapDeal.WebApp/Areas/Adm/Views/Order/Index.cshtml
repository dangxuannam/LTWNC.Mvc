@model IEnumerable<CheapDeal.WebApp.Models.Order>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Quản lý đơn hàng</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
            <li class="active"><strong>Đơn hàng</strong></li>
        </ol>
    </div>
    <div class="col-lg-2">
        <div class="title-action">
            <a href="@Url.Action("Create")" class="btn btn-primary" style="margin-top: 30px;">
                <i class="fa fa-plus"></i> Tạo đơn hàng mới
            </a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Danh sách đơn hàng (Tổng: @ViewBag.TotalOrders đơn)</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            @using (Html.BeginForm("Index", "Order", FormMethod.Get, new { @class = "form-horizontal" }))
                            {
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        <input type="text" name="searchString" value="@ViewBag.SearchString"
                                               class="form-control" placeholder="Tìm theo mã, tên, SĐT...">
                                    </div>
                                    <div class="col-sm-2">
                                        @Html.DropDownList("status",
                                                      new SelectList(Enum.GetValues(typeof(CheapDeal.WebApp.Models.OrderStatus))),
                                                      "-- Tất cả trạng thái --",
                                                      new { @class = "form-control" })
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="date" name="fromDate" value="@(ViewBag.FromDate != null ? ((DateTime)ViewBag.FromDate).ToString("yyyy-MM-dd") : "")"
                                               class="form-control" placeholder="Từ ngày">
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="date" name="toDate" value="@(ViewBag.ToDate != null ? ((DateTime)ViewBag.ToDate).ToString("yyyy-MM-dd") : "")"
                                               class="form-control" placeholder="Đến ngày">
                                    </div>
                                    <div class="col-sm-3">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-search"></i> Tìm kiếm
                                        </button>
                                        <a href="@Url.Action("Index")" class="btn btn-white">
                                            <i class="fa fa-refresh"></i> Làm mới
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Mã ĐH</th>
                                    <th>Ngày đặt</th>
                                    <th>Người nhận</th>
                                    <th>Số điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 150px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@item.OrderId</strong>
                                            </td>
                                            <td>
                                                @(item.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                                <br />
                                                <small class="text-muted">@(item.OrderDate?.ToString("HH:mm") ?? "")</small>
                                            </td>
                                            <td>@item.ShipName</td>
                                            <td>@item.ShipTel</td>
                                            <td>
                                                <small>@item.ShipAddress</small>
                                            </td>
                                            <td>
                                                <strong class="text-navy">@item.TotalPrice.ToString("N0") đ</strong>
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case CheapDeal.WebApp.Models.OrderStatus.New:
                                                        <span class="label label-info">Mới</span>
                                                        break;
                                                    case CheapDeal.WebApp.Models.OrderStatus.Approved:
                                                        <span class="label label-primary">Đã xác nhận</span>
                                                        break;
                                                    case CheapDeal.WebApp.Models.OrderStatus.Shipping:
                                                        <span class="label label-warning">Đang giao</span>
                                                        break;
                                                    case CheapDeal.WebApp.Models.OrderStatus.Success:
                                                        <span class="label label-success">Thành công</span>
                                                        break;
                                                    case CheapDeal.WebApp.Models.OrderStatus.Cancelled:
                                                        <span class="label label-danger">Đã hủy</span>
                                                        break;
                                                    case CheapDeal.WebApp.Models.OrderStatus.Returned:
                                                        <span class="label label-default">Đã trả hàng</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", new { id = item.OrderId })"
                                                       class="btn btn-white btn-sm" title="Xem chi tiết">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    @if (item.Status == CheapDeal.WebApp.Models.OrderStatus.New ||
                                                         item.Status == CheapDeal.WebApp.Models.OrderStatus.Approved)
                                                    {
                                                        <a href="@Url.Action("Edit", new { id = item.OrderId })"
                                                           class="btn btn-white btn-sm" title="Chỉnh sửa">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    }
                                                    <a href="@Url.Action("Print", new { id = item.OrderId })"
                                                       class="btn btn-white btn-sm" title="In hóa đơn" target="_blank">
                                                        <i class="fa fa-print"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            <p class="text-muted">Không có đơn hàng nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (ViewBag.TotalPages > 1)
                    {
                        <div class="text-center">
                            <ul class="pagination">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a href="@Url.Action("Index", new {
                                            page = i,
                                            searchString = ViewBag.SearchString,
                                            status = ViewBag.Status,
                                            fromDate = ViewBag.FromDate,
                                            toDate = ViewBag.ToDate
                                        })">@i</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (TempData["Success"] != null)
            {
                <text>
                toastr.success('@TempData["Success"]');
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                toastr.error('@TempData["Error"]');
                </text>
            }
        });
    </script>
}
