@model CheapDeal.WebApp.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hóa đơn #@Model.OrderId</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            font-size: 14px;
        }

        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
        }

        .invoice-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
        }

        .company-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .invoice-title {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin: 20px 0;
        }

        .info-section {
            margin-bottom: 30px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .info-box {
            width: 48%;
        }

            .info-box h3 {
                margin: 0 0 10px 0;
                font-size: 16px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;
            }

            .info-box p {
                margin: 5px 0;
                line-height: 1.6;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th {
            background-color: #f5f5f5;
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
            font-weight: bold;
        }

        td {
            padding: 10px 12px;
            border: 1px solid #ddd;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .total-section {
            margin-top: 20px;
            text-align: right;
        }

        .total-row {
            margin: 10px 0;
            font-size: 16px;
        }

        .grand-total {
            font-size: 20px;
            font-weight: bold;
            color: #1ab394;
            margin-top: 15px;
            padding-top: 10px;
            border-top: 2px solid #333;
        }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 12px;
            color: #666;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }

        .signature-section {
            display: flex;
            justify-content: space-between;
            margin-top: 60px;
        }

        .signature-box {
            text-align: center;
            width: 30%;
        }

        .signature-line {
            margin-top: 80px;
            border-top: 1px solid #000;
            padding-top: 5px;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 3px;
            font-size: 14px;
            font-weight: bold;
        }

        .status-success {
            background-color: #5cb85c;
            color: white;
        }

        .status-warning {
            background-color: #f0ad4e;
            color: white;
        }

        .status-info {
            background-color: #5bc0de;
            color: white;
        }

        .status-danger {
            background-color: #d9534f;
            color: white;
        }

        .status-default {
            background-color: #777;
            color: white;
        }

        @@media print {
            .no-print {
                display: none;
            }

            body {
                padding: 0;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="no-print" style="text-align: center; margin-bottom: 20px;">
            <button onclick="window.print()" style="padding: 10px 30px; font-size: 16px; background-color: #1ab394; color: white; border: none; border-radius: 3px; cursor: pointer;">
                <span style="margin-right: 5px;">🖨</span> In hóa đơn
            </button>
            <button onclick="window.close()" style="padding: 10px 30px; font-size: 16px; background-color: #666; color: white; border: none; border-radius: 3px; cursor: pointer; margin-left: 10px;">
                Đóng
            </button>
        </div>
        <div class="invoice-header">
            <div class="company-name">CHEAP DEAL SHOP</div>
            <div>Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</div>
            <div>Điện thoại: 0123-456-789 | Email: info@cheapdeal.com</div>
            <div class="invoice-title">HÓA ĐƠN BÁN HÀNG</div>
            <div style="margin-top: 10px;">
                Số: <strong>#@Model.OrderId</strong> |
                Ngày: <strong>@(Model.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")</strong>
            </div>
            <div style="margin-top: 10px;">
                Trạng thái:
                @switch (Model.Status)
                {
                    case CheapDeal.WebApp.Models.OrderStatus.New:
                        <span class="status-badge status-info">MỚI</span>
                        break;
                    case CheapDeal.WebApp.Models.OrderStatus.Approved:
                        <span class="status-badge status-info">ĐÃ XÁC NHẬN</span>
                        break;
                    case CheapDeal.WebApp.Models.OrderStatus.Shipping:
                        <span class="status-badge status-warning">ĐANG GIAO</span>
                        break;
                    case CheapDeal.WebApp.Models.OrderStatus.Success:
                        <span class="status-badge status-success">THÀNH CÔNG</span>
                        break;
                    case CheapDeal.WebApp.Models.OrderStatus.Cancelled:
                        <span class="status-badge status-danger">ĐÃ HỦY</span>
                        break;
                    case CheapDeal.WebApp.Models.OrderStatus.Returned:
                        <span class="status-badge status-default">ĐÃ TRẢ HÀNG</span>
                        break;
                }
            </div>
        </div>
        <div class="info-section">
            <div class="info-row">
                <div class="info-box">
                    <h3>THÔNG TIN KHÁCH HÀNG</h3>
                    <p>
                        <strong>
                            @if (Model.Customer != null)
                            {
                                @(Model.Customer.Profile?.FullName ?? Model.Customer.Email)
                            }
                            else
                            {
                                <span>Khách vãng lai</span>
                            }
                        </strong>
                    </p>
                    @if (Model.Customer != null)
                    {
                        <p>Email: @Model.Customer.Email</p>
                        if (!string.IsNullOrEmpty(Model.Customer.PhoneNumber))
                        {
                            <p>SĐT: @Model.Customer.PhoneNumber</p>
                        }
                    }
                </div>
                <div class="info-box">
                    <h3>THÔNG TIN GIAO HÀNG</h3>
                    <p><strong>@Model.ShipName</strong></p>
                    <p>Địa chỉ: @Model.ShipAddress</p>
                    <p>SĐT: @Model.ShipTel</p>
                    @if (Model.Shipper != null)
                    {
                        <p>Đơn vị VC: @Model.Shipper.CompanyName</p>
                    }
                </div>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th style="width: 5%;">STT</th>
                    <th style="width: 40%;">Tên sản phẩm</th>
                    <th style="width: 15%;" class="text-right">Đơn giá</th>
                    <th style="width: 10%;" class="text-center">Số lượng</th>
                    <th style="width: 10%;" class="text-center">Giảm giá</th>
                    <th style="width: 20%;" class="text-right">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                {
                    int stt = 1;
                    foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td class="text-center">@stt</td>
                            <td>
                                @item.Product.Name
                                @if (!string.IsNullOrEmpty(item.Notes))
                                {
                                    <br />
                                    <small style="color: #666;">(@item.Notes)</small>
                                }
                            </td>
                            <td class="text-right">@item.Price.ToString("N0") đ</td>
                            <td class="text-center"><strong>@item.Quantity</strong></td>
                            <td class="text-center">@((item.Discount * 100).ToString("0"))%</td>
                            <td class="text-right"><strong>@item.Total.ToString("N0") đ</strong></td>
                        </tr>
                        stt++;
                    }
                }
            </tbody>
        </table>
        <div class="total-section">
            <div class="total-row">
                <strong>Tạm tính:</strong>
                @if (Model.OrderDetails != null)
                {
                    @Model.OrderDetails.Sum(d => d.Total).ToString("N0")
                }
                else
                {
                    @((Model.TotalPrice - Model.Freight).ToString("N0"))
                }
                đ
            </div>
            <div class="total-row">
                <strong>Phí vận chuyển:</strong> @Model.Freight.ToString("N0") đ
            </div>
            <div class="grand-total">
                <strong>TỔNG CỘNG:</strong> @Model.TotalPrice.ToString("N0") đ
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div style="margin-top: 30px; padding: 15px; background-color: #f9f9f9; border-left: 3px solid #1ab394;">
                <strong>Ghi chú:</strong> @Model.Notes
            </div>
        }

        <div class="signature-section">
            <div class="signature-box">
                <strong>KHÁCH HÀNG</strong>
                <div class="signature-line">
                    (Ký, ghi rõ họ tên)
                </div>
            </div>
            <div class="signature-box">
                <strong>NHÂN VIÊN BÁN HÀNG</strong>
                <div class="signature-line">
                    @if (Model.Employee != null)
                    {
                        @(Model.Employee.Profile?.FullName ?? Model.Employee.Email)
                    }
                </div>
            </div>
            <div class="signature-box">
                <strong>THỦ KHO</strong>
                <div class="signature-line">
                    (Ký, ghi rõ họ tên)
                </div>
            </div>
        </div>
        <div class="footer">
            <p><strong>Cảm ơn quý khách đã mua hàng tại Cheap Deal Shop!</strong></p>
            <p>Hóa đơn được in lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>
    </div>

    <script>
        </script>
</body>
</html>

