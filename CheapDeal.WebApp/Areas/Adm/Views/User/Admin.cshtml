@model CheapDeal.WebApp.Models.UserFilterViewModel
@{
    ViewBag.Title = "Quản trị viên";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Danh sách Quản trị viên</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home", new { Area = "Adm" })">Trang chủ</a></li>
            <li><a href="@Url.Action("Index")">Người dùng</a></li>
            <li class="active"><strong>Quản trị viên</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Danh sách người dùng có vai trò Quản trị viên</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-xs">
                            <i class="fa fa-plus"></i> Thêm mới
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissable">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 150px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users != null && Model.Users.Any())
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.Account.UserName</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Account.Email</td>
                                            <td>@user.Phone</td>
                                            <td>@user.Account.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (user.Account.IsActive)
                                                {
                                                    <span class="label label-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-danger">Đã khóa</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", new { id = user.AccountId })"
                                                       class="btn btn-white btn-xs" title="Chi tiết">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = user.AccountId })"
                                                       class="btn btn-white btn-xs" title="Sửa">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Không có quản trị viên nào</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <div class="text-center">
                            <ul class="pagination">
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="@(i == Model.Page ? "active" : "")">
                                        <a href="@Url.Action("Admin", new { page = i })">@i</a>
                                    </li>
                                }
                            </ul>
                            <p class="text-muted">
                                Trang @Model.Page / @Model.TotalPages (Tổng: @Model.TotalRecords người dùng)
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
