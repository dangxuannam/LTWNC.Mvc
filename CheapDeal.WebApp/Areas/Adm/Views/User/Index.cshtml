@model CheapDeal.WebApp.Models.UserFilterViewModel
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@{
    var UserManager = Context.GetOwinContext().GetUserManager<CheapDeal.WebApp.ApplicationUserManager>();
}
@{
    ViewBag.Title = "Quản lý Người dùng";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Roles == null)
{
    <div class="alert alert-danger">
        <strong>LỖI DEBUG:</strong> ViewBag.Roles là NULL!
        <br>Controller/Action hiện tại: @ViewContext.RouteData.Values["controller"] / @ViewContext.RouteData.Values["action"]
        <br>Area hiện tại: @ViewContext.RouteData.DataTokens["area"]
        <br><strong>Bạn có thể đang truy cập SAI CONTROLLER!</strong>
        <br>Đảm bảo bạn đang truy cập: <code>/Adm/User/Index</code>
    </div>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><i class="fa fa-users"></i> Quản lý Người dùng</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home", new { Area = "Adm" })">Trang chủ</a></li>
            <li class="active"><strong>Quản lý người dùng</strong></li>
        </ol>
    </div>
    <div class="col-lg-2 text-right" style="padding-top: 30px;">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            <i class="fa fa-check"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-filter"></i> Tìm kiếm và Lọc</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Index", "User", new { Area = "Adm" }, FormMethod.Get, new { @class = "form-horizontal" }))
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Tìm kiếm</label>
                                    @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Tên, email, số điện thoại..." })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Vai trò</label>
                                    @Html.DropDownList("Role", ViewBag.Roles as SelectList ?? new SelectList(Enumerable.Empty<string>()), "-- Tất cả --", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Trạng thái</label>
                                    @Html.DropDownListFor(m => m.IsActive, new SelectList(new[] {
                                        new { Value = "", Text = "-- Tất cả --" },
                                        new { Value = "true", Text = "Hoạt động" },
                                        new { Value = "false", Text = "Đã khóa" }
                                    }, "Value", "Text", Model.IsActive?.ToString().ToLower()), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Từ ngày</label>
                                    @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">Đến ngày</label>
                                    @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <a href="@Url.Action("Index")" class="btn btn-white btn-sm">
                                    <i class="fa fa-refresh"></i> Xóa bộ lọc
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        <i class="fa fa-list"></i> Danh sách Người dùng
                        <span class="label label-primary">@Model.TotalRecords người dùng</span>
                    </h5>
                </div>
                <div class="ibox-content">
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th width="5%" class="text-center">STT</th>
                                        <th width="12%">
                                            @Html.ActionLink("Tên đăng nhập", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = "UserName",
                                                sortOrder = Model.SortBy == "UserName" && Model.SortOrder == "asc" ? "desc" : "asc",
                                                page = Model.Page
                                            })
                                            @if (Model.SortBy == "UserName")
                                            {
                                                <i class="fa fa-sort-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                            }
                                        </th>
                                        <th width="15%">
                                            @Html.ActionLink("Email", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = "Email",
                                                sortOrder = Model.SortBy == "Email" && Model.SortOrder == "asc" ? "desc" : "asc",
                                                page = Model.Page
                                            })
                                            @if (Model.SortBy == "Email")
                                            {
                                                <i class="fa fa-sort-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                            }
                                        </th>
                                        <th width="15%">
                                            @Html.ActionLink("Họ tên", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = "FullName",
                                                sortOrder = Model.SortBy == "FullName" && Model.SortOrder == "asc" ? "desc" : "asc",
                                                page = Model.Page
                                            })
                                            @if (Model.SortBy == "FullName")
                                            {
                                                <i class="fa fa-sort-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                            }
                                        </th>
                                        <th width="12%">Số điện thoại</th>
                                        <th width="10%">Vai trò</th>
                                        <th width="10%">
                                            @Html.ActionLink("Ngày tạo", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = "CreatedDate",
                                                sortOrder = Model.SortBy == "CreatedDate" && Model.SortOrder == "asc" ? "desc" : "asc",
                                                page = Model.Page
                                            })
                                            @if (Model.SortBy == "CreatedDate")
                                            {
                                                <i class="fa fa-sort-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                            }
                                        </th>
                                        <th width="8%" class="text-center">Trạng thái</th>
                                        <th width="13%" class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int stt = (Model.Page - 1) * Model.PageSize + 1;}
                                    @foreach (var item in Model.Users)
                                    {
                                        var userRoles = UserManager.GetRoles(item.AccountId);
                                        <tr>
                                            <td class="text-center">@stt</td>
                                            <td>@item.Account.UserName</td>
                                            <td>@item.Account.Email</td>
                                            <td>@(item.FullName ?? "<span class='text-muted'>Chưa cập nhật</span>")</td>
                                            <td>@(item.Phone ?? "<span class='text-muted'>Chưa cập nhật</span>")</td>
                                            <td>
                                                @if (userRoles.Any())
                                                {
                                                    foreach (var role in userRoles)
                                                    {
                                                        string badgeClass = "label-default";
                                                        switch (role)
                                                        {
                                                            case "Admin":
                                                                badgeClass = "label-danger";
                                                                break;
                                                            case "Manager":
                                                                badgeClass = "label-warning";
                                                                break;
                                                            case "Sale":
                                                                badgeClass = "label-info";
                                                                break;
                                                            case "Customer":
                                                                badgeClass = "label-primary";
                                                                break;
                                                        }
                                                        <span class="label @badgeClass">@role</span><text> </text>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="label label-default">Chưa có</span>
                                                }
                                            </td>
                                            <td>@item.Account.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td class="text-center">
                                                @if (item.Account.IsActive)
                                                {
                                                    <span class="label label-primary">
                                                        <i class="fa fa-check"></i> Hoạt động
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="label label-danger">
                                                        <i class="fa fa-lock"></i> Đã khóa
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", new { id = item.AccountId })" class="btn btn-info btn-xs" title="Chi tiết">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = item.AccountId })" class="btn btn-warning btn-xs" title="Chỉnh sửa">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-@(item.Account.IsActive ? "danger" : "success") btn-xs btn-toggle-status"
                                                            data-id="@item.AccountId"
                                                            data-status="@item.Account.IsActive.ToString().ToLower()"
                                                            title="@(item.Account.IsActive ? "Khóa" : "Kích hoạt")">
                                                        <i class="fa fa-@(item.Account.IsActive ? "lock" : "unlock")"></i>
                                                    </button>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a href="@Url.Action("Delete", new { id = item.AccountId })" class="btn btn-danger btn-xs" title="Xóa người dùng"
                                                           onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (Model.TotalPages > 1)
                        {
                            <div class="text-center">
                                <ul class="pagination">

                                    <li class="@(Model.Page == 1 ? "disabled" : "")">
                                        @if (Model.Page > 1)
                                        {
                                            @Html.ActionLink("«", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = Model.SortBy,
                                                sortOrder = Model.SortOrder,
                                                page = Model.Page - 1
                                            })
                                        }
                                        else
                                        {
                                            <a href="#">«</a>
                                        }
                                    </li>

           
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        if (i == Model.Page)
                                        {
                                            <li class="active"><a href="#">@i</a></li>
                                        }
                                        else if (i == 1 || i == Model.TotalPages || (i >= Model.Page - 2 && i <= Model.Page + 2))
                                        {
                                            <li>
                                                @Html.ActionLink(i.ToString(), "Index", new
                                                {
                                                    searchTerm = Model.SearchTerm,
                                                    role = Model.Role,
                                                    fromDate = Model.FromDate,
                                                    toDate = Model.ToDate,
                                                    isActive = Model.IsActive,
                                                    sortBy = Model.SortBy,
                                                    sortOrder = Model.SortOrder,
                                                    page = i
                                                })
                                            </li>
                                        }
                                        else if (i == Model.Page - 3 || i == Model.Page + 3)
                                        {
                                            <li class="disabled"><a href="#">...</a></li>
                                        }
                                    }

                                    <li class="@(Model.Page == Model.TotalPages ? "disabled" : "")">
                                        @if (Model.Page < Model.TotalPages)
                                        {
                                            @Html.ActionLink("»", "Index", new
                                            {
                                                searchTerm = Model.SearchTerm,
                                                role = Model.Role,
                                                fromDate = Model.FromDate,
                                                toDate = Model.ToDate,
                                                isActive = Model.IsActive,
                                                sortBy = Model.SortBy,
                                                sortOrder = Model.SortOrder,
                                                page = Model.Page + 1
                                            })
                                        }
                                        else
                                        {
                                            <a href="#">»</a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fa fa-exclamation-triangle"></i>
                            Không tìm thấy người dùng nào.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-toggle-status').click(function () {
                var btn = $(this);
                var userId = btn.data('id');
                var currentStatus = btn.data('status') === 'true';

                if (confirm(currentStatus ? 'Bạn có chắc muốn KHÓA tài khoản này?' : 'Bạn có chắc muốn KÍCH HOẠT tài khoản này?')) {
                    $.ajax({
                        url: '@Url.Action("ToggleStatus")',
                        type: 'POST',
                        data: { id: userId },
                        success: function (response) {
                            if (response.success) {
                                toastr.success(response.message);
                                setTimeout(function() {
                                    location.reload();
                                }, 1000);
                            } else {
                                toastr.error(response.message);
                            }
                        },
                        error: function () {
                            toastr.error('Đã xảy ra lỗi khi thay đổi trạng thái.');
                        }
                    });
                }
            });
        });
    </script>
}

