@model List<CheapDeal.WebApp.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart" style="font-size: 100px; color: #ddd;"></i>
            <h3 class="mt-3">Giỏ hàng trống</h3>
            <p class="text-muted">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-shopping-bag"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Danh sách sản phẩm -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Giảm giá</th>
                                    <th>Thành tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr data-product-id="@item.ProductId">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@Url.Content(item.ImageUrl)"
                                                     alt="@item.ProductName"
                                                     style="width: 80px; height: 80px; object-fit: cover;"
                                                     class="rounded mr-3" />
                                                <div>
                                                    <strong>@item.ProductName</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong>@item.Price.ToString("N0") đ</strong>
                                        </td>
                                        <td class="align-middle">
                                            <div class="input-group" style="width: 120px;">
                                                <div class="input-group-prepend">
                                                    <button class="btn btn-outline-secondary btn-sm btn-decrease" type="button">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                </div>
                                                <input type="number" class="form-control form-control-sm text-center quantity-input"
                                                       value="@item.Quantity" min="1" max="999" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary btn-sm btn-increase" type="button">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <span class="badge badge-success">@((item.Discount * 100).ToString("0"))%</span>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-danger item-total">
                                                @((item.Quantity * item.Price * (1 - item.Discount)).ToString("N0")) đ
                                            </strong>
                                        </td>
                                        <td class="align-middle">
                                            <button class="btn btn-danger btn-sm btn-remove" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                    <button class="btn btn-outline-danger" id="btnClearCart">
                        <i class="fas fa-trash"></i> Xóa giỏ hàng
                    </button>
                </div>
            </div>

            <!-- Tóm tắt đơn hàng -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <strong id="subtotal">@ViewBag.TotalAmount.ToString("N0") đ</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Phí vận chuyển:</span>
                            <strong>Miễn phí</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-danger" id="totalAmount">@ViewBag.TotalAmount.ToString("N0") đ</h5>
                        </div>

                        <a href="@Url.Action("Index", "Checkout")" class="btn btn-success btn-block btn-lg">
                            <i class="fas fa-credit-card"></i> Thanh toán
                        </a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="fas fa-shield-alt text-success"></i> Đảm bảo an toàn</h6>
                        <small class="text-muted">
                            Thông tin thanh toán của bạn được bảo mật
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tăng số lượng
            $('.btn-increase').on('click', function () {
                var $row = $(this).closest('tr');
                var $input = $row.find('.quantity-input');
                var quantity = parseInt($input.val()) + 1;
                $input.val(quantity);
                updateQuantity($row, quantity);
            });

            // Giảm số lượng
            $('.btn-decrease').on('click', function () {
                var $row = $(this).closest('tr');
                var $input = $row.find('.quantity-input');
                var quantity = parseInt($input.val()) - 1;
                if (quantity >= 1) {
                    $input.val(quantity);
                    updateQuantity($row, quantity);
                }
            });

            // Thay đổi số lượng trực tiếp
            $('.quantity-input').on('change', function () {
                var $row = $(this).closest('tr');
                var quantity = parseInt($(this).val());
                if (quantity < 1) {
                    quantity = 1;
                    $(this).val(1);
                }
                updateQuantity($row, quantity);
            });

            // Xóa sản phẩm
            $('.btn-remove').on('click', function () {
                if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                    var $row = $(this).closest('tr');
                    var productId = $row.data('product-id');
                    removeFromCart(productId, $row);
                }
            });

            // Xóa giỏ hàng
            $('#btnClearCart').on('click', function () {
                if (confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')) {
                    $.post('@Url.Action("ClearCart", "Cart")', function (result) {
                        if (result.success) {
                            location.reload();
                        }
                    });
                }
            });

            // Hàm cập nhật số lượng
            function updateQuantity($row, quantity) {
                var productId = $row.data('product-id');

                $.post('@Url.Action("UpdateQuantity", "Cart")', {
                    productId: productId,
                    quantity: quantity
                }, function (result) {
                    if (result.success) {
                        // Cập nhật thành tiền của item
                        $row.find('.item-total').text(result.itemTotal + ' đ');

                        // Cập nhật tổng tiền
                        $('#subtotal').text(result.totalAmount + ' đ');
                        $('#totalAmount').text(result.totalAmount + ' đ');
                    } else {
                        alert(result.message);
                    }
                });
            }

            // Hàm xóa sản phẩm
            function removeFromCart(productId, $row) {
                $.post('@Url.Action("RemoveFromCart", "Cart")', {
                    productId: productId
                }, function (result) {
                    if (result.success) {
                        $row.fadeOut(300, function () {
                            $(this).remove();

                            // Reload trang nếu giỏ hàng trống
                            if ($('tbody tr').length === 0) {
                                location.reload();
                            } else {
                                // Cập nhật lại tổng tiền
                                updateTotalAmount();
                            }
                        });
                    }
                });
            }

            // Hàm cập nhật tổng tiền
            function updateTotalAmount() {
                var total = 0;
                $('tbody tr').each(function () {
                    var itemTotal = $(this).find('.item-total').text().replace(/[^\d]/g, '');
                    total += parseInt(itemTotal);
                });

                $('#subtotal').text(total.toLocaleString('vi-VN') + ' đ');
                $('#totalAmount').text(total.toLocaleString('vi-VN') + ' đ');
            }
        });
    </script>

    <style>
        .quantity-input {
            width: 60px;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }

        .table img {
            border: 1px solid #dee2e6;
        }
    </style>
}

