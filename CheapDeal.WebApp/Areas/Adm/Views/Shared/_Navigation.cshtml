<style>
    #side-menu {
        width: 100%;
    }

        #side-menu > li {
            border-bottom: 1px solid #293846;
            position: relative;
        }

            #side-menu > li > a {
                color: #a7b1c2;
                padding: 14px 20px;
                display: block;
                text-decoration: none;
                border-left: 4px solid transparent;
                transition: all 0.3s;
                position: relative;
            }

                #side-menu > li > a:hover {
                    color: #fff;
                    background: #293846;
                    border-left: 4px solid #19aa8d;
                }

                #side-menu > li > a i {
                    margin-right: 10px;
                    width: 20px;
                    text-align: center;
                }

                #side-menu > li > a .arrow {
                    position: absolute;
                    right: 20px;
                    top: 50%;
                    transform: translateY(-50%);
                    font-size: 12px;
                    color: #a7b1c2;
                    transition: transform 0.3s;
                }

            #side-menu > li:hover > a .arrow {
                transform: translateY(-50%) rotate(90deg);
                color: #19aa8d;
            }
    .nav-second-level {
        background: #1c2b36;
        padding-left: 0;
        display: none;
        list-style: none;
        position: relative;
        width: 100%;
        z-index: 1;
    }

    #side-menu > li:hover > .nav-second-level {
        display: block;
    }

    .nav-second-level li {
        margin: 0;
        padding: 0;
        width: 100%;
        border-top: 1px solid #253444;
    }

        .nav-second-level li:first-child {
            border-top: none;
        }

        .nav-second-level li a {
            color: #a7b1c2;
            padding: 10px 15px 10px 45px;
            display: block;
            text-decoration: none;
            font-size: 13px;
            transition: all 0.2s;
            position: relative;
        }

            .nav-second-level li a:before {
                content: "›";
                position: absolute;
                left: 30px;
                color: #a7b1c2;
            }

            .nav-second-level li a:hover {
                color: #fff;
                background: #253444;
                padding-left: 50px;
            }

                .nav-second-level li a:hover:before {
                    color: #19aa8d;
                }

    #side-menu > li {
        transition: all 0.3s;
    }

    .nav-second-level {
        max-height: 400px;
        overflow-y: auto;
    }

        .nav-second-level::-webkit-scrollbar {
            width: 5px;
        }

        .nav-second-level::-webkit-scrollbar-thumb {
            background: #19aa8d;
            border-radius: 3px;
        }
</style>

